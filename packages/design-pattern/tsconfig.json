{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-native",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es2015"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    // "types": [],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "exclude": [
    "index.js",
    "android",
    "ios",
    "build",
    "node_modules",
    ".coverage",
    "native-assets",
    "jest"
  ]
}
